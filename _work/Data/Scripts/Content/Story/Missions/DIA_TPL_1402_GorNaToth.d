	AI_Output				(hero, self,"Info_GorNaToth_ARMOR_BACK_15_01"); //Ho cambiato idea!
	AI_Output				(self, hero,"Info_GorNaToth_ARMOR_BACK_11_02"); //Qualsiasi cosa ti serva, sai dove trovarmi!


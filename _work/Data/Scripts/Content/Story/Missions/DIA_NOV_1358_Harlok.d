instance  DIA_Harlok_FetchHarlok (C_INFO)
{
	npc			= Nov_1358_Harlok;
	nr			= 1;
	condition	= DIA_Harlok_FetchHarlok_Condition;
	information	= DIA_Harlok_FetchHarlok_Info;
	permanent	= 0;
	description	= "Ghorim m'envoie.";
};                       

FUNC int  DIA_Harlok_FetchHarlok_Condition()
{
	if	(Ghorim_KickHarlok == LOG_RUNNING)
	{
		return 1;
	};
};

FUNC VOID  DIA_Harlok_FetchHarlok_Info()
{
	AI_Output (other, self,"DIA_Harlok_FetchHarlok_15_00"); //Ghorim m'envoie.
	AI_Output (self, other,"DIA_Harlok_FetchHarlok_01_01"); //Quoi??
	Info_ClearChoices 	(DIA_Harlok_FetchHarlok);
	Info_Addchoice 		(DIA_Harlok_FetchHarlok,DIALOG_BACK															,DIA_Harlok_FetchHarlok_BACK);
	Info_Addchoice 		(DIA_Harlok_FetchHarlok,"Ramène ton cul aux broyeurs d'Herbe ou tu le regrettera. ",DIA_Harlok_FetchHarlok_OrElse);
	Info_Addchoice 		(DIA_Harlok_FetchHarlok,"Je dois te rappeler que tu dois le remplacer.",DIA_Harlok_FetchHarlok_Please);
};

func int DIA_Harlok_FetchHarlok_Please()
{
	AI_Output (other, self,"DIA_Harlok_FetchHarlok_Please_15_00"); //Je dois te rappeler que tu dois le remplacer.
	AI_Output (self, other,"DIA_Harlok_FetchHarlok_Please_01_01"); //C'est très gentil de ta part. Rappelle-moi encore quand j'aurais fini de dormir, d'accord ?
};

func int DIA_Harlok_FetchHarlok_OrElse()
{
	AI_Output (other, self,"DIA_Harlok_FetchHarlok_OrElse_15_00"); //Ramène tes fesses aux broyeurs d'Herbe ou tu le regrettera.
	AI_Output (self, other,"DIA_Harlok_FetchHarlok_OrElse_01_01"); //Essaye de ne pas perdre de temps avec moi, idiot !
	
	AI_StopProcessInfos(self);
};

func int DIA_Harlok_FetchHarlok_BACK()
{
	AI_Output (other, self,"DIA_Harlok_FetchHarlok_BACK_15_00"); //Ok, ok.
	Info_ClearChoices (DIA_Harlok_FetchHarlok);
};



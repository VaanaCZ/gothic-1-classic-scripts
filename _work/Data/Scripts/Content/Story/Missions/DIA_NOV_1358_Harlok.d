instance  DIA_Harlok_SendHarlok (C_INFO)
{
	npc			= Nov_1358_Harlok;
	nr			= 1;
	condition	= DIA_Harlok_SendHarlok_Condition;
	information	= DIA_Harlok_SendHarlok_Info;
	permanent	= 0;
	description	= "Bien, veux-tu remplacer ton ami pour qu'il puisse faire une pause maintenant ? ";
};                       

FUNC int  DIA_Harlok_SendHarlok_Condition()
{
	if ( (self.aivar[AIV_WASDEFEATEDBYSC]==TRUE) && Npc_KnowsInfo(hero, DIA_Harlok_FetchHarlok) )
	{
		return 1;
	};
};

FUNC VOID  DIA_Harlok_SendHarlok_Info()
{
	AI_Output	(other, self,"DIA_Harlok_SendHarlok_15_00"); //Et bien, tu pourrais donner une chance à ton ami maintenant ?
	AI_Output	(self, other,"DIA_Harlok_SendHarlok_01_01"); //Tu me casses les pieds ! Pourquoi tu te mêles des mes affaires ?
	AI_Output	(other, self,"DIA_Harlok_SendHarlok_15_02"); //Je veux juste te voir broyer de l'Herbe.
	AI_Output	(self, other,"DIA_Harlok_SendHarlok_01_03"); //Ok, ok - je m'en vais... imbécile !

	B_LogEntry	(CH1_GhorimsRelief,"Harlok a finalement obtenu le message. Maintenant il le reprendra de Ghorim.");
	B_GiveXP	(XP_SentHarlok);
	
	Npc_ExchangeRoutine(self,"START");
	var C_NPC Ghorim; Ghorim = Hlp_GetNpc(Nov_1310_Ghorim);
	Npc_ExchangeRoutine(Ghorim,"START");
	Ghorim_KickHarlok = LOG_SUCCESS;
	Npc_SetPermAttitude(Ghorim,ATT_FRIENDLY);
	Npc_SetPermAttitude(self,ATT_ANGRY);
	AI_StopProcessInfos	(self);
};


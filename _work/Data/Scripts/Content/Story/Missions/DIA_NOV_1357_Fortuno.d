// **************************************************
	var int Fortuno_RationDay;
// **************************************************

instance  DIA_Fortuno_GetGeschenk (C_INFO)
{
	npc			= NOV_1357_Fortuno;
	nr			= 1;
	condition	= DIA_Fortuno_GetGeschenk_Condition;
	information	= DIA_Fortuno_GetGeschenk_Info;
	permanent	= 0;
	description = "Qu'as-tu pour moi ?";
};                       

FUNC int  DIA_Fortuno_GetGeschenk_Condition()
{
	return 1;
};

FUNC VOID  DIA_Fortuno_GetGeschenk_Info()
{
	AI_Output (other, self,"DIA_Fortuno_GetGeschenk_15_00"); //Qu'as-tu pour moi ?
	AI_Output (self, other,"DIA_Fortuno_GetGeschenk_05_01"); //Voilà, prends trois rouleaux d'Herbe de marais. C'est de la Noire Nordique. Bonne marchandise.
	AI_Output (self, other,"DIA_Fortuno_GetGeschenk_05_02"); //tu peux en avoir plus chaque jour, mais si tu veux plus que ta ration quotidienne, et bien, tu dois payer.
	AI_Output (self, other,"DIA_Fortuno_GetGeschenk_05_03"); //Si tu trouves des baies et des Herbes sur les chemins entre les camps, tu peux me les apporter. Je te les achèterai.

	CreateInvItems(self, itmijoint_2, 3);
	B_GiveInvItems(self, other, itmijoint_2, 3);
	Fortuno_RationDay = Wld_GetDay();
	
	Log_CreateTopic	(GE_TraderPSI,	LOG_NOTE);
	B_LogEntry		(GE_TraderPSI,"Fortuno manipule des Herbes au-dessous du laboratoire d'alchimie.");
};


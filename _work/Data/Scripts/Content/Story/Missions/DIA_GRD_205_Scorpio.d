	Info_Addchoice 		(DIA_Scorpio_Hello,"Simplemente quería ver cómo es esto.",DIA_Scorpio_Hello_JustLooking);
	Info_Addchoice 		(DIA_Scorpio_Hello,"Tengo un mensaje para los magos.",DIA_Scorpio_Hello_Mages);

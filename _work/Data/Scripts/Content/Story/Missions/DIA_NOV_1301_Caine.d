// **************************************************

instance  DIA_Caine_Hallo (C_INFO)
{
	npc			= Nov_1301_Caine;
	nr			= 1;
	condition	= DIA_Caine_Hallo_Condition;
	information	= DIA_Caine_Hallo_Info;
	permanent	= 0;
	description	= "Salut ! Je suis nouveau ici !";
};                       

FUNC int  DIA_Caine_Hallo_Condition()
{
	return 1;
};

FUNC VOID  DIA_Caine_Hallo_Info()
{
	AI_Output (other, self,"DIA_Caine_Hallo_15_00"); //Salut ! Je suis nouveau ici !
	AI_Output (self, other,"DIA_Caine_Hallo_13_01"); //Je... je... je m'appelle Caine, un élève de Cor Kalom. Tu as dû entendre parler de lui, non ?
			
	Info_ClearChoices	(DIA_Caine_Hallo );
	Info_AddChoice		(DIA_Caine_Hallo,"Non.",DIA_Caine_Hallo_Nein);
	Info_AddChoice		(DIA_Caine_Hallo,"Oui.",DIA_Caine_Hallo_Ja);
};

func void DIA_Caine_Hallo_Ja()
{
	AI_Output (other, self,"DIA_Caine_Hallo_Ja_15_00"); //Ouais.
	AI_Output (self, other,"DIA_Caine_Hallo_Ja_13_01"); //Alors tu sais que c'est le deuxième homme dans ce camp... après Y'Bérion.
	Info_ClearChoices	(DIA_Caine_Hallo );
};

func void DIA_Caine_Hallo_Nein()
{
	AI_Output (other, self,"DIA_Caine_Hallo_Nein_15_00"); //Non.
	AI_Output (self, other,"DIA_Caine_Hallo_Nein_13_01"); //Non ? ! Tu n'as pas vécu ici longtemps, n'est-ce pas ?
	AI_Output (self, other,"DIA_Caine_Hallo_Nein_13_02"); //Cor Kalom vient en second après Y'Bérion. Il décide qui peut nous rejoindre comme novice.
	Info_ClearChoices	(DIA_Caine_Hallo );
};

